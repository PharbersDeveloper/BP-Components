{{#bp-empty-state as |empty|}}
	{{#empty.title src=src}}
		{{title}}
	{{/empty.title}}
	{{#empty.body}}
		{{desc}}
	{{/empty.body}}
	{{#empty.footer}}
		{{#bp-button type="primary" onClick=(action 'primaryClick')}}
			{{primaryBtnText}}
		{{/bp-button}}
		{{#bp-button onClick=(action 'standardClick')}}
			{{standardBtnText}}
		{{/bp-button}}
	{{/empty.footer}}
{{/bp-empty-state}}